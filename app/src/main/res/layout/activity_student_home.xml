<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentHome">

    <TextView
        android:id="@+id/textViewStudentWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="299dp"
        android:text="Welcome, student!"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonStudentCheckIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStudentCheckIn"
        android:layout_width="225dp"
        android:layout_height="93dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="14dp"
        android:text="Check In with Couselor on how you are doing"
        app:layout_constraintBottom_toTopOf="@+id/buttonStudentScheduleAppt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStudentWelcome" />

    <Button
        android:id="@+id/buttonStudentScheduleAppt"
        android:layout_width="225dp"
        android:layout_height="88dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="72dp"
        android:text="Schedule an Appointment with your Counselor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStudentCheckIn" />
</androidx.constraintlayout.widget.ConstraintLayout>